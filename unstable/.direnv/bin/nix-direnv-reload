#!/usr/bin/env bash
set -e
if [[ ! -d "/home/abhi/templates/nix-shells/unstable" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/abhi/templates/nix-shells/unstable")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/abhi/templates/nix-shells/unstable" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/abhi/templates/nix-shells/unstable/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/abhi/templates/nix-shells/unstable/.envrc" "/home/abhi/templates/nix-shells/unstable/.direnv"/*.rc
